{
    "allowedEditors": {
        "html": [
            "html",
            "css"
        ],
        "python": [
            "html",
            "python",
            "css"
        ],
        "chart": [
            "html",
            "javascript",
            "css"
        ]
    },
    "editor": {
        "html": {
            "name": "htmlCodemirror",
            "icon": "fab fa-html5"
        },
        "javascript": {
            "name": "javascriptCodemirror",
            "icon": "fab fa-js-square"
        },
        "python": {
            "name": "pythonCodemirror",
            "icon": "fab fa-python"
        },
        "css": {
            "name": "cssCodemirror",
            "icon": "fab fa-css3"
        }
    },
    "options": {
        "html": {
            "tabSize": 4,
            "mode": "xml",
            "theme": "monokai",
            "lineNumbers": true,
            "line": false,
            "cursor": true
        },
        "javascript": {
            "tabSize": 4,
            "mode": "javascript",
            "theme": "monokai",
            "lineNumbers": true,
            "line": false,
            "cursor": true
        },
        "python": {
            "tabSize": 4,
            "mode": "text/x-python",
            "theme": "monokai",
            "lineNumbers": true,
            "line": false,
            "cursor": true
        },
        "css": {
            "tabSize": 4,
            "mode": "css",
            "theme": "monokai",
            "lineNumbers": true,
            "line": false,
            "cursor": true
        }
    }
}
